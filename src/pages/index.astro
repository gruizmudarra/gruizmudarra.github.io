---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroSection from "../components/HeroSection.astro";
import AboutSection from "../components/AboutSection.astro";
import TechStackSection from "../components/TechStackSection.astro";
import PostsCarousel from "../components/PostsCarousel.astro";
import ContactSection from "../components/ContactSection.astro";
import ScrollReveal from "../components/ScrollReveal.astro";
---

<BaseLayout fullWidth>
	<!-- Hero: full-width, full-viewport -->
	<HeroSection />

	<!-- About: contained -->
	<AboutSection />

	<!-- Tech Stack: contained -->
	<TechStackSection />

	<!-- Featured Posts -->
	<section id="proyectos" class="px-4 py-20 max-w-5xl mx-auto">
		<ScrollReveal>
			<h2 class="text-2xl md:text-3xl text-center mb-12">
				Proyectos Destacados
			</h2>
		</ScrollReveal>
		<ScrollReveal>
			<PostsCarousel />
		</ScrollReveal>
		<ScrollReveal delay="0.1s">
			<div class="text-center mt-8">
				<a
					href="/blog"
					class="inline-flex items-center gap-2 text-base font-semibold
						text-accent no-underline
						transition-all duration-300
						hover:text-accent-secondary hover:gap-3"
				>
					Ver todos los art√≠culos &rarr;
				</a>
			</div>
		</ScrollReveal>
	</section>

	<!-- Contact CTA: full-width dark -->
	<ContactSection />
</BaseLayout>
